#:kivy 2.1.0
FirstScreen:

<FirstScreen>:
    FloatLayout:
        Button:
            text: 'next'
            size_hint: (0.08, 0.05)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release: 
                root.manager.current = 'second'

<SecondScreen>:
    FloatLayout:
        Button:
            text: 'back'
            size_hint: (0.08, 0.05)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release:
                root.manager.current = 'first'