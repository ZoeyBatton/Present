#:kivy 2.1.0

FirstScreen:

<FirstScreen>:
    name: 'first'
    
    FloatLayout:
        # md_bg_color: 0, 0, 1, 1
        FitImage:
            source: 'download.jpg'

        #  light blue #ADD8E6
        MDLabel:
            text: 'Presenting:'
            # size_hint: (0.9, 0.9)
            font_size: '50sp'
            pos_hint: {'center_x': 0.85, 'center_y': 0.9}
        MDLabel:
            text: 'Python + Kivy (KivyMD)'
            # size_hint: (0.9, 0.9)
            font_size: '50sp'
            pos_hint: {'center_x': 0.65, 'center_y': 0.6}
        MDRoundFlatIconButton:
            
            icon: 'next.png'
            text: 'Next'
            text_color: 'black'
            line_color: 'black'
            icon_color: 'black'
            pos_hint: {'center_x': 0.9, 'center_y': 0.1}
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'second'

<SecondScreen>:
    name: 'second'
    MDFloatLayout:
        FitImage:
            source: 'download.jpg'

        MDLabel:
            text: '''Kivy is an open source framwork that runs                               through Python to create mobile                                 Andriod and IOS applications.'''
            font_size: '30sp'
            pos_hint: {'center_x': 0.53, 'center_y': 0.9}


        Image:
            source: 'kivy_logo.png'
            pos_hint: {'center_x': 0.9, 'center_y': 0.9}
            size_hint: (0.18, 0.18)

        MDLabel:
            text: 'Kivy uses both the langauges Python and kvlang to allow an '

        MDRoundFlatIconButton:

            icon: 'next.png'
            text: 'Next'
            text_color: 'black'
            line_color: 'black'
            icon_color: 'black'
            pos_hint: {'center_x': 0.9, 'center_y': 0.1}
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'third'

        MDRoundFlatIconButton:
            icon: 'back.png'
            text: 'Back'
            text_color: 'black'
            line_color: 'black'
            icon_color: 'black'
            pos_hint: {'center_x': 0.1, 'center_y': 0.1}
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'first'



<ThirdScreen>:
    name: 'third'
    MDFloatLayout:
        FitImage:
            source: 'download.jpg'

        MDRoundFlatIconButton:
            icon: 'back.png'
            text: 'Back'
            text_color: 'black'
            line_color: 'black'
            icon_color: 'black'
            pos_hint: {'center_x': 0.1, 'center_y': 0.1}
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'second'

        MDLabel:
            text: 'Different Button Types'
            font_size: '40sp'
            pos_hint: {'center_x': 0.7, 'center_y': 0.8}
        MDLabel:
            text: 'Kivy:'
            font_size: '20sp'
            pos_hint: {'center_x': 0.55, 'center_y': 0.7}
        MDLabel:
            text: 'KivyMD:'
            font_size: '20sp'
            pos_hint: {'center_x': 1, 'center_y': 0.7}
        MDLabel:
            text: 'Button: function'
            font_size: '15sp'
            pos_hint: {'center_x': 0.55, 'center_y': 0.6}
        Button:
            text: 'Kivy'
            font_size: '15sp'
            size_hint: (0.1, 0.05)
            pos_hint: {'center_x': 0.15, 'center_y': 0.55}
        MDLabel:
            text: 'MDIconButton:       MDFloatingActionButton:'
            font_size: '15sp'
            pos_hint: {'center_x': 1, 'center_y': 0.6}
        MDIconButton:
            icon: "language-python"
            pos_hint: {"center_x": .55, "center_y": .55}
        MDFloatingActionButton:
            icon: "language-python"
            pos_hint: {"center_x": .75, "center_y": .55}
            md_bg_color: 'blue'
        MDLabel:
            text: 'MDFlatButton:       MDRaisedButton:'
            font_size: '15sp'
            pos_hint: {'center_x': 1, 'center_y': 0.45}
        MDFlatButton:
            text: 'KivyMD'
            pos_hint: {"center_x": .55, "center_y": .35}
        MDRaisedButton:
            text: 'kivyMD'
            pos_hint: {"center_x": .75, "center_y": .35}
        MDLabel:
            text: 'MDRoundFlatButton:       MDRoundFlatIconButton:'
            font_size: '15sp'
            pos_hint: {'center_x': 1, 'center_y': 0.25}
        MDRoundFlatButton:
            text: "Python + KivyMD"
            text_color: "black"
            pos_hint: {"center_x": .6, "center_y": .15}
        MDRoundFlatIconButton:
            text: "Python + KivyMD"
            icon: "language-python"
            text_color: "black"
            pos_hint: {"center_x": .85, "center_y": .15}
