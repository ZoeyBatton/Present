#:kivy 2.1.0
#:import NoTransition kivy.uix.screenmanager.NoTransition

FirstScreen:

<FirstScreen>:
    name: 'first'
    
    FloatLayout:
        # md_bg_color: 0, 0, 1, 1
        FitImage:
            source: 'download.jpg'
        Image:
            source: 'Kivy_logo.png'
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            size_hint: (0.2, 0.2)

        #  light blue #ADD8E6
        MDLabel:
            text: 'Presenting:'
            # size_hint: (0.9, 0.9)
            font_size: '50sp'
            pos_hint: {'center_x': 0.85, 'center_y': 0.75}
        MDLabel:
            text: 'Python + Kivy (KivyMD)'
            # size_hint: (0.9, 0.9)
            font_size: '50sp'
            pos_hint: {'center_x': 0.65, 'center_y': 0.5}
        MDRoundFlatIconButton:
            
            icon: 'next.png'
            text: 'Next'
            text_color: 'black'
            line_color: 'black'
            icon_color: 'black'
            pos_hint: {'center_x': 0.9, 'center_y': 0.1}
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'second'

<SecondScreen>:
    name: 'second'
    MDFloatLayout:
        FitImage:
            source: 'download.jpg'

        MDLabel:
            text: '''Kivy is an open source framwork that runs through                               Python to create mobile Andriod and IOS                                 applications.'''
            font_size: '30sp'
            pos_hint: {'center_x': 0.53, 'center_y': 0.7}


        Image:
            source: 'kivy_logo.png'
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            size_hint: (0.18, 0.18)

        MDLabel:
            text: 'KivyMD'
            font_size: '30sp'
            pos_hint: {'center_x': 0.53, 'center_y': 0.5}

        MDLabel:
            text: 'KivyMD (Kivy material Design) is an extension of Kivy that allows for more advanced Widgets and menu options for App Development.'
            font_size: '25sp'
            pos_hint: {'center_x': 0.53, 'center_y': 0.4}

        MDRoundFlatIconButton:

            icon: 'next.png'
            text: 'Next'
            text_color: 'black'
            line_color: 'black'
            icon_color: 'black'
            pos_hint: {'center_x': 0.9, 'center_y': 0.1}
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'fourth'

        MDRoundFlatIconButton:
            icon: 'back.png'
            text: 'Back'
            text_color: 'black'
            line_color: 'black'
            icon_color: 'black'
            pos_hint: {'center_x': 0.1, 'center_y': 0.1}
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'first'



<ThirdScreen>:
    name: 'third'
    MDFloatLayout:
        FitImage:
            source: 'download.jpg'
        MDRoundFlatIconButton:

            icon: 'next.png'
            text: 'Next'
            text_color: 'black'
            line_color: 'black'
            icon_color: 'black'
            pos_hint: {'center_x': 0.9, 'center_y': 0.1}
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'fourth'

        MDRoundFlatIconButton:
            icon: 'back.png'
            text: 'Back'
            text_color: 'black'
            line_color: 'black'
            icon_color: 'black'
            pos_hint: {'center_x': 0.1, 'center_y': 0.1}
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'second'

        Label:
            text: 'Initializing a KV file in Python'
            font_size: '35sp'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        Label: 
            text: 'Set up an "App" class in your Python File with a Build method'
            font_size: '20sp'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        Label: 
            text: 'sm = ScreenManager()'
            font_size: '20sp'
            font_name: 'Comic'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': 0.15, 'center_y': 0.75}
        Label: 
            text: 'class ExampleApp(App) OR class ExampleApp(MDApp) use MDApp when using KivyMD'
            font_size: '20sp'
            color: 0, 0, 0, 1
            font_name: 'Comic'
            pos_hint: {'center_x': 0.2, 'center_y': 0.7}
        Label: 
            text: '  def build(self):'
            font_size: '20sp'
            font_name: 'Comic'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': 0.2, 'center_y': 0.65}
        Label: 
            text: '                          sm.add_widget(Builder.load_file(filename.kv))'
            font_size: '20sp'
            font_name: 'Comic'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': 0.3, 'center_y': 0.6}
        Label: 
            text: 'return sm'
            font_size: '20sp'
            font_name: 'Comic'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': 0.18, 'center_y': 0.55}
        Label:
            text: 'Run Class'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': 0.1, 'center_y': 0.45}
            font_size: '20sp'
        Label:
            text: 'if __name__ == "__main__"'
            color: 0, 0, 0, 1
            font_name: 'Comic'
            pos_hint: {'center_x': 0.2, 'center_y': 0.4}
            font_size: '20sp'
        Label:
            text: 'ExampleApp().run()'
            color: 0, 0, 0, 1
            font_name: 'Comic'
            pos_hint: {'center_x': 0.2, 'center_y': 0.35}
            font_size: '20sp'
        Label:
            text: 'Set up your KV File with #: plus your version of Kivy/KivyMD'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': 0.4, 'center_y': 0.25}
            font_size: '20sp'
        Label:
            text: '#:kivy 2.1.0'
            color: 0, 0, 0, 1
            font_name: 'Comic'
            pos_hint: {'center_x': 0.1, 'center_y': 0.2}
            font_size: '20sp'


